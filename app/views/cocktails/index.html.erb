<div class="wrapper-grey">
  <div class="container text-center">
    <div class="row">
    <h1>Kevin's Cocktail</h1>
    <% @cocktails.each do |cock| %>
      <div class="col-xs-12 col-sm-4 col-l-3">
        <div class="card">
          <div class="card-description">
            <h3><%= cock.name %></h3>
          </div>
          <div class="card-link form-inline">
            <p><%= link_to 'Show Details', cocktail_path(cock) %></p>
            <p><%= link_to 'Edit', edit_cocktail_path(cock) %></p>
            <p><%= link_to 'Delete', cocktail_path(cock), method: :delete, data: { confirm: "Are you sure?" } %></p>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
<div class="create text-center">
  <%= link_to 'Create a new Cocktail', new_cocktail_path %>
</div>

<div id="footer-black">
  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-4">
        <ul class="list-inline">
          <li><a href="#"><i class="fa fa-facebook"></i></a></li>
          <li><a href="#"><i class="fa fa-instagram"></i></a></li>
          <li><a href="#"><i class="fa fa-youtube"></i></a></li>
          <li><a href="#"><i class="fa fa-twitter"></i></a></li>
        </ul>
      </div>
      <div class="col-xs-8 text-right">
        <p>This is a Cocktail Website @ LeWagon</p>
      </div>
    </div>
  </div>
</div>
